<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#000000">

    <TextView
        android:id="@+id/txt_Header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_logo"
        android:text="CONNECT-CALLPROOF"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#C72222"/>

<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_gravity="center">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/login_field_ll"
            android:orientation="vertical"
            android:layout_below="@+id/or_ll">


            <EditText
                android:id="@+id/edt_call_email"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textColorHint="#000000"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:backgroundTint="#FFFFFF"
                android:background="@drawable/editext_shapes"
                />

            <EditText
                android:id="@+id/edt_call_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#000000"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:backgroundTint="#FFFFFF"
                android:background="@drawable/editext_shapes"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn_call_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_shapes"
                android:backgroundTint="@color/red_phone"
                android:text="Sign in"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp">

                <CheckBox
                    android:id="@+id/checkbox_remember_call_proof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/grey_100"
                    android:scaleX="1.5"
                    android:scaleY="1.5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember Me"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/checkbox_remember_call_proof"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:indeterminate="false"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="65"
                android:visibility="gone"/>

        </LinearLayout>

<!--    </ScrollView>-->



</LinearLayout>